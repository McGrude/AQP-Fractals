1000 REM LINE DRAWING USING BRESENHAM'S ALGORITHM 
1010 S=SCREEN
1050 INPUT "X1, Y1, X2, Y2"; X1, Y1, X2, Y2
1060 screen 0,3
1070 color 15
1080 clear bitmap
          
1090 DX = ABS(X2 - X1)
1100 DY = ABS(Y2 - Y1)
1110 SX = SGN(X2 - X1)
1120 SY = SGN(Y2 - Y1)
1130 IF DX >  DY THEN GOSUB 1180
1140 IF DX <= DY THEN GOSUB 1280
1150 PAUSE
1160 SCREEN S/64
1170 END
     
1180 REM CASE WHERE DX > DY (MORE HORIZONTAL)
1190 E = 2 * DY - DX
1200 FOR I = 1 TO DX + 1
1210     pset(X1, Y1)
1220     IF E >= 0 THEN Y1 = Y1 + SY
1230     IF E >= 0 THEN E = E - 2 * DX
1240     X1 = X1 + SX
1250     E = E + 2 * DY
1260 NEXT I
1270 RETURN

1280 REM CASE WHERE DY >= DX (MORE VERTICAL)
1290 E = 2 * DX - DY
1300 FOR I = 1 TO DY + 1
1310     pset(X1, Y1)
1320     IF E >= 0 THEN X1 = X1 + SX
1330     IF E >= 0 THEN E = E - 2 * DY
1340     Y1 = Y1 + SY
1350     E = E + 2 * DX
1360 NEXT I
1370 RETURN
